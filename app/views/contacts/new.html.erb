<div class="container">
    <div class="row">
        <div class="col-xs-8 col-xs-offset-2">
        <%= form_for(@contact) do |f| %>
            <h3>タイトル</h3>
            <%= f.text_field :title %>
            <h3>本文</h3>
            <%= f.text_area :coment %>
            <%= f.submit "送信" %>
             <table class="table table-hover">
             	<% @contacts.each do |c| %>
             	<thead>
             		<tr>
             			<th>名前</th>
						<th>投稿日</th>
						<th>タイトル</th>
						<th>本文</th>
					</tr>
				</thead>
				<tbody>
					<tr>
						<td><%= c.user.name %></td>
						<td><%= c.created_at.strftime('%Y/%m/%d %H:%M') %></td>
						<td><%= c.title %></td>
						<td><%= c.coment %></td>
					</tr>
				</tbody>
				<% end %>
        <% end %>
        <%#= link_to "問い合わせ一覧", contact_path %>
        <% if current_user.admin %>
	        <table class="table table-hover">
	        	<% @contacts.each do |c| %>
					<thead>
						<tr>
							<th>名前</th>
							<th>投稿日</th>
							<th>タイトル</th>
							<th>本文</th>
						</tr>
					</thead>
					<tbody>
						<tr>
							<td><%= link_to c.user.name,  contact_path(c.user.id) %></td>
							<td><%= c.created_at.strftime('%Y/%m/%d %H:%M') %></td>
							<td><%= c.title %></td>
							<td><%= c.coment %></td>
						</tr>
					</tbody>
				<% end %>
			</table>
        <%end %>
    	</div>
    </div>
</div>