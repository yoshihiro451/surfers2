<div class="container">
	<div class="row">
		<div class="col-xs-6 col-xs-offset-3">
			<h1>新規投稿</h1>
			<%= form_for @topic do |f| %>
				<h4>タイトル</h4>
				<%= f.text_field :title %>
				<h4>コメント</h4>
				<%= f.text_area :comment, :size => "80*200" %>
				<h4>地域</h4>
				<%= f.select :area, Topic.areas.keys, {}, class: "select-default" %>
				<%= f.submit "投稿" %>
			<% end %>
			<!-- <div class="pull-right">
	        <%= link_to '戻る', :back %>
	    	</div> -->
		</div>
	</div>
</div>
