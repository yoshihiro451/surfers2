<!DOCTYPE html>
<html>
  <head>
    <title>Surfers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="navbar navbar-inverse">
      <div class="container">
        <nav>
          <ul class="nav navbar-nav navbar-right">
            <li><%= link_to_unless_current "スレッド一覧", topics_path%>
            <li><%= link_to_unless_current "スレッド投稿", new_topic_path %></li>
            <li><%#= link_to_unless_current "スレッド編集",  edit_topic_path(1) %></li>
            <li><%= link_to_unless_current "問い合わせ", new_contact_path %></li>
            <li><%= link_to_unless_current "ログイン",  new_user_session_path %></li>
            <li><%#= link_to_unless_current "Chat", topic_chats_path %></li>
            <% if user_signed_in? %>
            <li><%= link_to_unless_current "My page", user_path(current_user) %></li>
            <% end %>
            <%# if user_signed_in? %>
            <li><%= link_to_unless_current "新規登録",  new_user_registration_path %></li>
            <%# end %>
            <li><%= link_to "ログアウト", destroy_user_session_path, method: :delete %></li>
          </ul>
        </nav>
      </div>
    </header>
    <div class="main">
      <div class="body">
      <%= yield %>
      </div>
   </div>
    <footer>
      <div class="center-block">
      </div>
    </footer>
  </body>
</html>
